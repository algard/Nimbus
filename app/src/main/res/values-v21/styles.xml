<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/orange04</item>
        <item name="android:colorPrimaryDark">@color/orange01</item>
        <item name="android:colorAccent">@color/orange05</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/orange_gray_button</item>
        <item name="android:alpha">1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
