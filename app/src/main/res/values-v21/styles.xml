<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/orange04</item>
        <item name="android:colorPrimaryDark">@color/orange01</item>
        <item name="android:colorAccent">@color/orange05</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Material.Light">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:colorPrimary">@color/orange04</item>
        <item name="android:colorPrimaryDark">@color/orange01</item>
        <item name="android:colorAccent">@color/orange05</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/orange_gray_button</item>
        <item name="android:alpha">1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">#636363</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/spinner_drop_down_item_background</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
