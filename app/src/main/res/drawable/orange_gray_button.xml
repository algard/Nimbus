<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#808080"/>
            <padding
                android:left="15dp"
                android:top="10dp"
                android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#808080"/>
            <padding
                android:left="15dp"
                android:top="10dp"
                android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#ff7906"/>
            <padding
                android:left="15dp"
                android:top="10dp"
                android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>