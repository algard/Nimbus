<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="planetexpress.nimbus.activities.ChallengeRosterActivity">

    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10,000 Steps"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <View
        android:layout_width="fill_parent"
        android:focusable="false"
        android:layout_height="2dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:textSize="20dp"
            android:gravity="right"
            android:id="@+id/start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Oct 1 @ 5pm  - "/>
        <TextView
            android:textSize="20dp"
            android:id="@+id/end_date"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oct 8 @ 10pm"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:focusable="false"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="#636363"/>

    <LinearLayout
        android:id="@+id/viewSelector"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:gravity="fill_horizontal"
        android:orientation="horizontal"
        android:elevation="3dp">
        <TextView
            android:id="@+id/participatingNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Participating"
            android:drawablePadding="0dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#636363"/>

        <TextView
            android:id="@+id/pendingNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Pending"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:focusable="false"
        android:layout_height="2dp"
        android:background="#636363"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Participants"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:paddingLeft="5dp"
        android:background="@color/orange04"/>
    <View
        android:layout_width="fill_parent"
        android:focusable="false"
        android:layout_height="2dp"
        android:background="#636363"/>
    <ListView
        android:id="@+id/participantsList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </ListView>
    <View
        android:layout_width="fill_parent"
        android:focusable="false"
        android:layout_height="2dp"
        android:background="#636363"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pending"
        android:textColor="#FFFFFF"
        android:paddingLeft="5dp"
        android:background="@color/orange04"/>
    <View
        android:layout_width="fill_parent"
        android:focusable="false"
        android:layout_height="2dp"
        android:background="#636363"/>
    <ListView
        android:id="@+id/pendingList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </ListView>


</LinearLayout>
