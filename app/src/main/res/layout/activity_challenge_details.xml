<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:contentDescription="time!"
            android:src="@drawable/description_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:paddingLeft="5dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title" />
    </LinearLayout>
        <EditText
            android:layout_marginLeft="30dp"
            android:id="@+id/challengeTitleField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_marginRight="10dp">

                <TextView
                    android:paddingLeft="30dp"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Type"
                    />

                <Spinner
                    android:paddingLeft="30dp"
                    android:id="@+id/typeOfChallengeSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_weight="1"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_marginLeft="10dp">

                <TextView
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="# of steps"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numberOfStepsSpinner"
                    android:spinnerMode="dropdown"
                    android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:contentDescription="time!"
            android:src="@drawable/description_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"/>
        </LinearLayout>
        <EditText
            android:layout_marginLeft="30dp"
            android:id="@+id/challengeDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Add your description here!"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:contentDescription="time!"
            android:src="@drawable/time_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:textSize="24dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <Spinner
                android:paddingLeft="30dp"
                android:id="@+id/startDateSpinner"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dropdown"/>
            <Spinner
                android:id="@+id/startTimeSpinner"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <TextView
            android:textSize="24dp"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <Spinner
                android:paddingLeft="30dp"
                android:id="@+id/endDateSpinner"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dropdown"/>
            <Spinner
                android:id="@+id/endTimeSpinner"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dropdown"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:contentDescription="time!"
            android:src="@drawable/reward_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:textSize="24dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward"/>
    </LinearLayout>
        <Spinner
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rewardSpinner"
            android:spinnerMode="dropdown"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="24dp"
            android:text="Participants"
            android:textStyle="bold"
            />

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/numberOfParticipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Participants"/>
        <Button
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/orange12"
            android:padding="15dp"
            android:textColor="#636363"
            android:id="@+id/addClientsButton"
            android:textSize="14dp"
            android:text="Add Clients" />


        <Button
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:background="@color/orange03"
            android:layout_height="fill_parent"
            android:id="@+id/startChallengeButton"
            android:textSize="18dp"
            android:text="Start Challenge"
            android:textColor="#FFFFFF" />



</LinearLayout>
    </ScrollView>